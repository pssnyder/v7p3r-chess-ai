{
  "thinking_brain": {
    "input_size": 690,
    "hidden_size": 256,
    "num_layers": 8,
    "output_size": 4096,
    "dropout": 0.1,
    "learning_rate": 0.001,
    "weight_decay": 1e-05,
    "memory_config": {
      "max_memory_positions": 15,
      "memory_decay_factor": 0.9,
      "status_trend_window": 4,
      "pruning_threshold": 0.4,
      "critical_memory_boost": 1.3
    }
  },
  "gameplay_brain": {
    "population_size": 8,
    "simulation_depth": 2,
    "generations": 4,
    "mutation_rate": 0.3,
    "crossover_rate": 0.7,
    "time_limit": 1.0,
    "parallel_simulations": 4
  },
  "training": {
    "target_games": 50,
    "games_per_checkpoint": 10,
    "max_game_length": 80,
    "resume_from_checkpoint": true,
    "enable_progress_tracking": true
  },
  "monitoring": {
    "enable_visual": false,
    "save_data": true,
    "output_dir": "monitoring_data"
  },
  "model_directory": "models",
  "log_directory": "logs"
}